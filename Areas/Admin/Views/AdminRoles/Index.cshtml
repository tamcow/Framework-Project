@model IEnumerable<IS220_PROJECT.Models.Role>

@{
    ViewData["Title"] = "Quản lý quyền truy cập";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div>
    <a class="btn btn-primary text-white" asp-controller="AdminRoles" asp-action="Create">Create</a>
</div>
<div class="divider bg-dark mt-1" style="padding: 0.5px;"></div>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Tên</th>
                <th scope="col">Mô tả</th>
                <th scope="col">#</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
                foreach (var item in Model)
                {
                    <tr>
                        <th scope = "row">
                            @item.RoleId
                        </th>
                        <td>
                           @item.RoleName
                        </td>
                        <td>
                           @item.Description
                        </td>
                        <td>
                            <a class="btn btn-primary btn-tone m-r-5"  asp-controller="AdminRoles" asp-action="Details" asp-route-id="@item.RoleId">View</a> |
                            <a class="btn btn-secondary btn-tone m-r-5" asp-controller="AdminRoles" asp-action="Edit" asp-route-id="@item.RoleId">Edit</a> |
                            <a class="btn btn-danger btn-tone m-r-5" asp-controller="AdminRoles" asp-action="Delete" asp-route-id="@item.RoleId">Delete</a>
                        </td>
                    </tr>
                }
        </tbody>
    </table>
</div>