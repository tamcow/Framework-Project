@section Scripts{
    <script>
        $(document).ready(function(){
            function prettierPrice(price){
                let prettyPrice = ""
                while(price != 0){
                    let num = price%1000;
                    if(num==0 && price > 1000)
                        prettyPrice =",000" + prettyPrice;
                    else
                        if(String(num).length == 1 && price > 1000)
                            prettyPrice =",00" + num + prettyPrice;
                        else
                            if(String(num).length == 2 && price > 1000)
                                prettyPrice =",0" + num + prettyPrice;
                            else
                                prettyPrice ="," + num + prettyPrice;
                    price = Math.floor(price/1000);
                }
                prettyPrice = prettyPrice.substring(1,prettyPrice.length)  + " VND";
                return prettyPrice;
            }
            var rows = document.querySelectorAll('tr')
            var count = 1
            var sum = 0
            rows.forEach(r => {
                if(r.children[0].innerText == "STT")
                    return false;
                r.children[0].innerText = count;
                count++;
                let price = r.children[4].innerText;
                price = price.replace("VND","")
                let strPrice = price.split(",");
                let cvPrice = ""
                strPrice.forEach(p => {
                   cvPrice += p;
                })
                sum += (parseInt(r.children[3].innerText) * parseInt(cvPrice))
                r.children[5].innerText =  prettierPrice(parseInt(r.children[3].innerText) * parseInt(cvPrice));
            })
            //$.each($rows, (k, $v)=>{
            //    $col = $v.find("td");
            //    console.log($col)
            //})
            var temp = document.getElementById('temp')
            var vat = document.getElementById('vat')
            var total = document.getElementById('total')
            temp.innerText += " " + prettierPrice(sum);
            vat.innerText += " " + prettierPrice(sum*0.1);
            total.innerText += " " + prettierPrice(sum + sum*0.1);
        })
    </script>
}