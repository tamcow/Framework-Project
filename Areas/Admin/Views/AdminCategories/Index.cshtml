@model IEnumerable<IS220_PROJECT.Models.Category>

@{
    ViewData["Title"] = "Danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Danh mục</h1>

<div class="card">
	<div class="card-body">
			<div class="text-right">
				<a class="btn btn-primary" asp-action="Create">
					<i class="anticon anticon-plus-circle m-r-5"></i>
					<span>Thêm phân loại</span>
				</a>
			</div>
		<div class="table-responsive">
			<table class="table table-hover e-commerce-table">
				<thead>
					<tr>
						<th>
							Category
						</th>
						<th>
							Description
						</th>
						<th>
							Parent
						</th>
						<th>
							Published
						</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					@if (Model != null)
						@foreach (var item in Model)
						{
										<tr>
											<td>
									@Html.DisplayFor(modelItem => item.CatName)
											</td>
											<td>
									@Html.DisplayFor(modelItem => item.Description)
											</td>
											<td>
									@Html.DisplayFor(modelItem => item.ParentId)
											</td>
											<td>
									@Html.DisplayFor(modelItem => item.Published)
											</td>
											<td>
												<a class="btn btn-secondary btn-tone m-r-5" asp-action="Details" asp-route-id="@item.CatId">Details</a> |
												<a class="btn btn-primary btn-tone m-r-5" asp-action="Edit" asp-route-id="@item.CatId">Edit</a> |
												<a class="btn btn-danger btn-tone m-r-5" asp-action="Delete" asp-route-id="@item.CatId">Delete</a>
											</td>
										</tr>
						}
				</tbody>
			</table>
		</div>
	</div>
</div>


