@model IS220_PROJECT.Models.ChangePasswordViewModel
<div class="register-form">
    <form asp-controller="Account" asp-action="ChangePassword" method="post">
        <input hidden asp-for="AccountId" />
        <div class="row">
            <div class="col-lg-12">
                <label class="font-weight-semibold">Mật khẩu cũ</label>
                <input type="password" asp-for="OldPassword" value="" placeholder="Mật khẩu cũ">
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>
            <div class="col-lg-12">
                <label class="font-weight-semibold">Mật khẩu mới</label>
                <input type="password" asp-for="NewPassword" placeholder="Mật khẩu mới">
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="col-lg-12">
                <label class="font-weight-semibold">Mật khẩu mới</label>
                <input type="password" asp-for="ConfirmNewPassword" placeholder="Nhập lại mật khẩu mới">
                <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
            </div>
            <div class="col-lg-12">
                <input style="float: right;" type="submit" name="submit" value="Cập nhật">
            </div>
        </div>
    </form>
</div>