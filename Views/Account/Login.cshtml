@model IS220_PROJECT.Models.LoginViewModel

@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="page-banner">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <span class="round-shape"></span>
                <h2 class="banner-title">ĐĂNG NHẬP</h2>
                <div class="bread-crumb"><a asp-controller="Home" asp-action="Index">TRANG CHỦ</a> / ĐĂNG NHẬP</div>
            </div>
        </div>
    </div>
</section> 
<section class="login-section">
    <div class="container">
        <div class="col-lg-6 col-md-6">
            <h3 class="sec-title">Đăng nhập</h3>
            <p class="sec-desc">
                Đăng nhập để mua hàng
            </p>
            <div class="login-form">
                <form asp-action="Login" method="post">
                    <input type="text" placeholder="User Name" asp-for="UserName">
                    <span asp-validation-for="UserName" class="text-danger"></span>
                    <input type="password" placeholder="Your Password" asp-for="Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <input type="submit" name="submit" value="login">
                </form>
            </div>
        </div>
    </div>
</section>

