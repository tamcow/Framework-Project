@model IS220_PROJECT.Models.RegisterViewModel

@{
    ViewData["Title"] = "Đăng ký";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="page-banner">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <span class="round-shape"></span>
                <h2 class="banner-title">ĐĂNG KÝ</h2>
                <div class="bread-crumb"><a asp-controller="Home" asp-action="Index">TRANG CHỦ</a> / ĐĂNG KÝ</div>
            </div>
        </div>
    </div>
</section> 
<section class="login-section">
    <div class="container">
        <div class="col-lg-8 col-md-6">
            <h3 class="sec-title">ĐĂNG KÝ</h3>
            <p class="sec-desc">
                Đăng ký tài khoản để nhận ưu đãi
            </p>
            <div class="register-form">
                <form asp-action="Register" method="post">
                    <div class="row">
                        <div class="col-lg-8">
                            <input asp-for="@Model.FullName" type="text" placeholder="Your Name" >
                            <span asp-validation-for="@Model.FullName" class="text-danger"></span>
                        </div>
                        <div class="col-lg-8">
                            <input type="text" placeholder="User Name" asp-for="@Model.UserName">
                            <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                        </div>
                        <div class="col-lg-8">
                            <input type="text" placeholder="Phone" asp-for="@Model.PhoneNumber">
                            <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="col-lg-8">
                            <input type="email" placeholder="Email" asp-for="@Model.Email">
                            <span asp-validation-for="@Model.Email" class="text-danger"></span>
                        </div>
                        <div class="col-lg-8">
                            <input type="password" placeholder="Password" asp-for="@Model.Password">
                            <span asp-validation-for="@Model.Password" class="text-danger"></span>
                        </div>
                        <div class="col-lg-8">
                            <input type="password" placeholder="Confirm Password" asp-for="@Model.ConfirmPassword">
                            <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="keep-log-regi">
                        <input type="radio" id="register" name="register" value="keep-register" required>
                        <label for="register">
                            Tôi đồng ý với các điều khoản của UITPro
                        </label>   
                    </div>
                    <input type="submit" name="submit" value="Đăng ký">
                </form>
            </div>
    </div>
</section>

